{
  "config": {
    "tag": "sasaplus1/diary"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5"
  },
  "private": true,
  "scripts": {
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t ${npm_package_config_tag} .",
    "docker:run": "docker run --rm -p 1313:1313 -v \"$(pwd):/var/www/${npm_package_name}\" ${npm_package_config_tag}",
    "docker:sh": "docker run -it --rm -p 1313:1313 -v \"$(pwd):/var/www/${npm_package_name}\" ${npm_package_config_tag} sh",
    "fixpack": "npx fixpack",
    "serve": "hugo serve 2>/dev/null || run-s docker:build docker:run",
    "server": "run-s serve",
    "sh": "run-s docker:build docker:sh"
  }
}
